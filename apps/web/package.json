		"@tailwindcss/vite": "^4.1.14",
		"@tanstack/table-core": "^8.21.3",
		"@types/node": "^24",
		"@vite-pwa/assets-generator": "^1.0.1",
		"@vite-pwa/sveltekit": "^1.0.0",
		"bits-ui": "^2.11.4",
		"clsx": "^2.1.1",
